<Page x:Class="CarsRent.WPF.Pages.MainFramePages.Cars"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarsRent.WPF.Pages.MainFramePages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Cars" Loaded="Page_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnDelete" Content="Удалить" Grid.Column="1" Grid.Row="3" Click="btnDelete_Click"/>
        <Button x:Name="btnAdd" Content="Добавить" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Click="btnAdd_Click"/>
        <Button x:Name="btnEdit" Content="Изменить" Grid.Column="1" Grid.Row="2" Click="btnEdit_Click"/>

        <TextBox x:Name="tbxSearch" Grid.Row="0" Grid.Column="0" TextChanged="tbxSearch_TextChanged" FontSize="20"/>

        <DataGrid x:Name="dgCars" Grid.Row="1" Grid.RowSpan="10" Grid.Column="0" AutoGenerateColumns="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Марка" Binding="{Binding Path=Brand}"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding Path=Model}"/>
                <DataGridTextColumn Header="Номер паспорта" Binding="{Binding Path=PassportNumber}"/>
                <DataGridTextColumn Header="Дата выдачи паспорта" Binding="{Binding Path=PassportIssuingDate}"/>
                <DataGridTextColumn Header="VIN" Binding="{Binding Path=VIN}"/>
                <DataGridTextColumn Header="Номер кузова" Binding="{Binding Path=BodyNumber}"/>
                <DataGridTextColumn Header="Цвет" Binding="{Binding Path=Color}"/>
                <DataGridTextColumn Header="Год выпуска" Binding="{Binding Path=Year}"/>
                <DataGridTextColumn Header="Номер двигателя" Binding="{Binding Path=EngineNumber}"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding Path=Price}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
