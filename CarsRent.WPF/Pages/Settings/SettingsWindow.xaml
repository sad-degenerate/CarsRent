<Window x:Class="CarsRent.WPF.Pages.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800" WindowStartupLocation="CenterOwner">
    <Grid x:Name="settingsWindowGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>

        <Frame Grid.Row="1" Name="settingsFrame" Grid.Column="0" Grid.ColumnSpan="10" 
               ContentRendered="settingsFrame_ContentRendered"/>
        <Button x:Name="btnDataSettings" Content="Настройки образцов" Grid.Column="0" Grid.Row="0" 
                Click="SettingsType_Click" Tag="settingsType"/>
        <Button x:Name="btnDisplaySettings" Content="Отображение" Grid.Column="1" Grid.Row="0" 
                Click="SettingsType_Click" Tag="settingsType"/>
        <Button x:Name="btnLandlordSettings" Content="Настройки арендодателя" Grid.Column="2" Grid.Row="0" 
                Click="SettingsType_Click" Tag="settingsType"/>
    </Grid>
</Window>